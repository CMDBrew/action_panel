<% content_for :title do %>
  <%= title t('active_admin.devise.reset_password.title') %>
<% end %>

<%= devise_error_messages! %>
<%= active_admin_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  f.inputs do
    f.input :email
  end
  f.actions do
    f.action :submit,
             label: t('active_admin.devise.reset_password.submit'),
             button_html: {
               value: t('active_admin.devise.reset_password.submit'),
               class: 'btn btn-primary'
             }
  end
end %>
